{
  "name": "Proyecto con LaTeX",
  "image": "zydou/devcontainer-texlive:2023",
  "customizations": {
    "vscode": {
      "extensions": [
        "james-yu.latex-workshop",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vsliveshare.vsliveshare",
        "ms-vsliveshare.vsliveshare-pack"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "latex-workshop.latex.autoBuild.run": "onSave",
        "latex-workshop.latex.outDir": "%DIR%/out",
        "latex-workshop.latex.recipes": [
          {
            "name": "latexmk ðŸ”¥",
            "tools": ["latexmk"]
          }
        ],
        "latex-workshop.latex.tools": [
          {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-pdf",
              "%DOC%"
            ]
          }
        ],
        "latex-workshop.view.pdf.viewer": "tab"
      }
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y perl && mkdir -p out && cp Tesis.pdf out/ && (cd out && python3 -m http.server 8000 --bind 0.0.0.0 &)"
}
